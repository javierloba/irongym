<h1>Activities</h1>


<div class='activities-cards'>
  {{#each activities}}


  <div class="card" style="width: 18rem;">
    <img src='{{this.image}}' class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.description}}
      </p>

      <form action="/private/reserve/activity/{{this.id}}" method="POST">
        <button type="submit" class="btn btn-primary">Reserve</button>
      </form>
 
      <a href="/auth/signup" class="btn btn-primary">Reserve</a>

    </div>
  </div>
  {{/each}}

